<h2>注文履歴一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td>
        <%= link_to admin_order_path(order) do %>
        <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
        <% end %>  
      </td>
      <td><%= order.name %></td>
      <td><%= order.order_products.quantity %></td>
      <td><%= order.order_status %></td>
    </tr>
  </tbody>
  <% end %>
  <%= paginate @orders %>
</table>