
  <%= f.attachment_field :image %>

  <div class="row">
    <div class="product-form">
      <div class="col-xs-4">
        <%= f.label :"商品名" %>
      </div>
      <div class="col-xs-8">
        <%= f.text_field :name%>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="product-form">
      <div class="col-xs-4">
        <%= f.label :"商品説明" %>
      </div>
      <div class="col-xs-8">
        <%= f.text_area :description %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="product-form">
      <div class="col-xs-4">
        <%= f.label :"ジャンル" %>
      </div>
      <div class="col-xs-8">
    <!--DBから@genresの配列データを表示。属性名:genre_id、配列データ:@genres、値:id、表示名:name、オプション:include_blank-->
        <%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "選択して下さい" %> 
      </div>
    </div>
  </div>

  <div class="row">
    <div class="product-form">
      <div class="col-xs-4">
        <%= f.label :"税抜価格" %>
      </div>
      <div class="col-xs-8">
        <%= f.text_field :price_without_tax %>円
      </div>
    </div>
  </div>

  <div class="row">
    <div class="product-form">
      <div class="col-xs-4">
        <%= f.label :"販売ステータス" %>
      </div>
      <div class="col-xs-8">
        <%= f.select :sales_status, [["販売中", true ], ["販売停止中", false]] %> <!--選択で商品一覧に販売ステータスのif文が起動-->
      </div>
    </div>
  </div>
