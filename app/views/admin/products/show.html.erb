<div class="container">

  <h2>商品詳細</h2>

  <div class="row">
    <div class="col-xs-4">
      <%= attachment_image_tag @product, :image, :fill, 250, 200, fallback: "no_img.jpg" %>
    </div>

    <div class="col-xs-8">
      <p>商品名 &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;<%= @product.name %></p>
    </div>
    
    <div class="col-xs-8">
      <p>商品説明 &emsp;&emsp;&emsp;&emsp;&ensp;&ensp; <%= @product.description %></p>
    </div>
    
    <div class="col-xs-8">
      <p>ジャンル &emsp;&emsp;&emsp;&emsp;&emsp;<%= @product.genre.name %></p>
    </div>

    <div class="col-xs-8">
      <p>税込価格 &emsp;&emsp;&emsp;&emsp;&emsp;<%= price_include_tax(@product.price_without_tax) %> (<%= @product.price_without_tax %>)円</p>
    </div>

    <div class="col-xs-8">
      <p>販売ステータス &emsp;
        <% if @product.sales_status == true %> <!--もし商品の販売ステータスがtrueなら-->
          <span>販売中</span>
        <% else @product.sales_status == false %>
          <span>販売停止中<span>
        <% end %>
      </p>
    </div>
      
    <div class="admin-product-edit", style="float: right;">
      <%= link_to "編集する", edit_admin_product_path(@product), class: "btn btn-primary" %>
    </div>
  </div>
  
</div>