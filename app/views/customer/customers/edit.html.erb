<div class="container">
	<h2>登録情報編集</h2>

	<%= form_for(@customer) do |f| %>

		<!-- エラーメッセージ表示-->
		<% if @customer.errors.any? %>
			<div id="error_explanation">
				<h3><%= @customer.errors.count %>error prohibited this obj from being saved:</h3>
				<ul>
					<% @customer.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<!-- エラーメッセージ表示-->

		 <div class="field">
		    <label>名前</label>
		    <%= f.label :first_name, "(姓)" %>
		    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
		    <%= f.label :last_name, "(名)" %>
		    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
		  </div>

		  <div class="field">
		    <label>フリガナ</label>
		    <%= f.label :kana_first_name, "(セイ)" %>
		    <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
		    <%= f.label :kana_last_name, "(メイ)" %>
		    <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %>
		  </div>

		  <div class="field">
		    <%= f.label :email, "メールアドレス" %>
		    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
		  </div>

		  <div class="field">
		    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
		    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
		  </div>

		  <div class="field">
		    <%= f.label :residence, "住所" %>
		    <%= f.text_field :residence, autofocus: true, autocomplete: "residence" %>
		  </div>

		  <div class="field">
		    <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
		    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
		  </div>

		  <div class="actions">
		    <%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
		  </div>
	<% end %>

	<%= link_to "退会する", quit_customer_path(@customer.id), class: "btn btn-danger" %>

</div>