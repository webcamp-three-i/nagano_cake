<div class="container">
	<br><br>
	<h2 class="well well-sm col-xs-3 text-center">登録情報編集</h2>

	<div class="row">
			<%= form_for(@customer) do |f| %>

				<!-- エラーメッセージ表示-->
				<% if @customer.errors.any? %>
					<div id="error_explanation">
						<h3><%= @customer.errors.count %>error prohibited this obj from being saved:</h3>
						<ul>
							<% @customer.errors.full_messages.each do |message| %>
							<li><%= message %></li>
							<% end %>
						</ul>
					</div>
				<% end %>
				<!-- エラーメッセージ表示-->
			<div class="col-xs-9">
				 <div class="form-group col-xs-9">
				 	<br>
				    <label class="col-xs-4">名前</label>
				    <%= f.label :first_name, "(姓)" %>
				    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
				    <%= f.label :last_name, "(名)" %>
				    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
				  </div>

				  <div class="form-group col-xs-9">
				    <label class="col-xs-4">フリガナ</label>
				    <%= f.label :kana_first_name, "(セイ)" %>
				    <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
				    <%= f.label :kana_last_name, "(メイ)" %>
				    <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %>
				  </div>

				  	<div class="form-group col-xs-9">
				    <%= f.label :email, "メールアドレス", class: "col-xs-4" %>
				    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-6" %>
				  </div>

				  <div class="form-group col-xs-9">
				    <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-xs-4" %>
				    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-xs-4" %>
				  </div>

				  <div class="form-group col-xs-9">
				    <%= f.label :residence, "住所", class: "col-xs-4" %>
				    <%= f.text_field :residence, autofocus: true, autocomplete: "residence", class: "col-xs-8" %>
				  </div>

				  <div class="form-group col-xs-9">
				    <%= f.label :phone_number, "電話番号(ハイフンなし)", class: "col-xs-4" %>
				    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "col-xs-4" %>
				  </div>

				  <div class="form-group col-xs-9">
				  	<br>
				    <%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
				    <%= link_to "退会する", quit_customer_path(@customer.id), class: "btn btn-danger col-xs-offset-2" %>
				  </div>
			</div>
			<% end %>
	</div>
</div>
