<div class="container">
	<div class="row">
		<h2>マイページ</h2>
	</div>

	<div class="row">
		<strong>登録情報</strong>
		<%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-primary" %>
		<%= link_to "パスワードを変更する", edit_customer_registration_path, class: "btn btn-primary" %>
	</div>

	<div class="row">
		<table class="table">
			<tbody>
				<tr>
					<td>氏名</td>
					<td><%= @customer.first_name %><%= @customer.last_name %></td>
				</tr>
				<tr>
					<td>カナ</td>
					<td><%= @customer.kana_first_name %><%= @customer.kana_last_name %></td>
				</tr>
				<tr>
					<td>郵便番号</td>
					<td><%= @customer.postal_code %></td>
				</tr>
				<tr>
					<td>住所</td>
					<td><%= @customer.residence %></td>
				</tr>
				<tr>
					<td>電話番号</td>
					<td><%= @customer.phone_number %></td>
				</tr>
				<tr>
					<td>メールアドレス</td>
					<td><%= @customer.email %></td>
				</tr>
			</tbody>
		</table>
	</div>

	<div class="row">
		<strong>配送先</strong>
		<%= link_to "一覧を見る", customer_shipping_addresses_path, class: "btn btn-primary" %>
	</div>

	<div class="row">
		<strong>注文履歴</strong>
		<%= link_to "一覧を見る", customer_orders_path, class: "btn btn-primary" %>
	</div>
</div>