<div class="container">
  <div class="row">
      <h2 class="well well-sm col-xs-3 text-center">新規会員登録</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= render "customers/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="field" style="padding-bottom: 8px;" >
        <br>
        <label class="col-xs-3">名前</label>
        <%= f.label :first_name, "(姓)", class: "col-xs-1" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        <%= f.label :last_name, "(名)　　　", class: "col-xs-offset-1" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>
    </div>

    <div class="row">
      <div class="field" style="padding-bottom: 8px;">
        <label class="col-xs-3">フリガナ</label>
        <%= f.label :kana_first_name, "(セイ)",class: "col-xs-1" %>
        <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
        <%= f.label :kana_last_name, "(メイ)　　", class: "col-xs-offset-1" %>
        <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %>
      </div>
    </div>

    <div class="row">
      <div class="field" style="padding-bottom: 8px;">
        <%= f.label :email, "メールアドレス", class: "col-xs-3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-offset-1" %>
      </div>
    </div>

    <div class="row">
      <div class="field" style="padding-bottom: 8px;">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-xs-3" %>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-xs-offset-1" %>
      </div>
    </div>

    <div class="row">
      <div class="field">
        <%= f.label :residence, "住所", class: "col-xs-3" %>
        <%= f.text_field :residence, autofocus: true, autocomplete: "residence", class: "col-xs-offset-1 col-xs-5", style: "padding: 1px 2px;" %>
      </div>
    </div>

    <div class="row" style="padding: 8px 0;">
      <div class="field">
        <%= f.label :phone_number, "電話番号(ハイフンなし)", class: "col-xs-3" %>
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: " col-xs-offset-1" %>
      </div>
    </div>

    <div class="row">
      <div class="field" style="padding-bottom: 8px;">
        <div class="col-xs-3">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-xs-offset-1" %>
      </div>
    </div>

    <div class="row">
      <div class="field" style="padding-bottom: 24px;">
        <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-xs-3" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-xs-offset-1" %>
      </div>
    </div>

    <div class="row">
      <div class="actions text-center">
        <%= f.submit "新規登録", class: "btn btn-success", style: "padding: 6px 54px;" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <h2 class="well well-sm col-xs-3 text-center">既に登録済みの方</h2>
  </div>
  <div class="row">
    <div class="col-xs-offset-1">
      <%= link_to "こちら", new_customer_session_path %><span>　からログインしてください。</span>
    </div>
  </div>
</div>
