<div class="container">
  <div class="row">
    <h2 style="padding: 24px 0;">パスワード変更</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="field" style="padding-bottom: 8px;">
        <div class="col-xs-3">
          <%= f.label :password, "新しいパスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row">
      <div class="field" style="padding-bottom: 8px;">
        <%= f.label :password_confirmation, "新しいパスワード(確認用)", class: "col-xs-3" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row">
      <div class="field" style="padding-bottom: 24px;">
        <%= f.label :current_password, "現在のパスワード", class: "col-xs-3" %>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
    </div>

    <div class="row">
      <div class="actions">
        <%= f.submit "パスワードを変更する", class: "btn btn-primary col-xs-offset-3", style: "padding: 6px 30px;" %>
      </div>
    </div>
  <% end %>
</div>