<div class="container">
  <div class="row">
    <br><br>
    <div class="col-xs-1"></div>
    <p class="well well-sm col-xs-3 text-center">会員の方はこちらからログイン</p>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
        <div class="field" style="padding-top: 16px;" >
          <%= f.label :email, "メールアドレス", class: "col-xs-2 col-xs-offset-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-5" %>
        </div>
    </div>

    <div class="row">
      <div class="field" style="padding: 16px 0;" >
        <%= f.label :password, "パスワード", class: "col-xs-2 col-xs-offset-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-xs-5" %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-offset-6">
         <%= link_to "=> パスワードを忘れた方はこちら", new_password_path(resource_name) %>
      </div>
    </div>

    <div class="row">
      <div class="actions col-xs-offset-3">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <br><br>
    <div class="col-xs-1"></div>
    <p class="well well-sm col-xs-3 text-center" >登録がお済みでない方</p>
  </div>

  <div class="row">
    <div class="col-xs-offset-1">
      <%= link_to "こちら", new_customer_registration_path %><span>　から新規登録を行なってください。</span>
    </div>
  </div>
</div>