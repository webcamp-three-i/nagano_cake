<div class="container">
  <div class="row">
    <h2 style="margin-top: 64px;">管理者登録</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "admins/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="field" style="padding-top: 16px;">
        <%= f.label :email, "メールアドレス", class: "col-xs-3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-4",style: "padding: 0;" %>
      </div>
    </div>

    <div class="row">
      <div class="field" style="padding: 16px 0;">
        <div class="col-xs-3">
          <%= f.label :password, "パスワード"%>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-xs-4",style: "padding: 0;" %>
      </div>
    </div>

    <div class="row">
      <div class="field" style="padding: 16px 0;">
        <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-xs-3" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-xs-4",style: "padding: 0;" %>
      </div>
    </div>

    <div class="row">
      <div class="actions col-xs-offset-4" style="padding-top: 32px;">
        <%= f.submit "新規登録", class: "btn btn-success", style: "padding: 6px 54px;" %>
      </div>
    </div>
  <% end %>
</div>
